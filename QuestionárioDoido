python:

import serial
import time

ser = serial.Serial('COM4', 9600)

# Função para enviar um estado ao Arduino
def enviar_estado(estado):
    ser.write(estado.encode())
    time.sleep(1)

# Função para desligar todos os LEDs
def desligar_leds():
    enviar_estado('0')

while True:
    resposta_correta = False

    # Pergunta ao usuário
    resposta = input("Qual é a resposta? (S/N): ")
    if resposta.lower() == 's':s
    
        resposta_correta = True

    if resposta_correta:
        enviar_estado('2')  # Resposta correta: LED 2 ligado
    else:
        enviar_estado('3')  # Resposta incorreta: LED 3 ligado

    # Agora, desligue todos os LEDs antes de fazer a próxima pergunta
    desligar_leds()




arduino:

int led1 = 7;  // Pino do LED 1
int led2 = 6;  // Pino do LED 2
int led3 = 5;  // Pino do LED 3
char estado = '0';  // Inicializa o estado com '0'

void setup() {
  Serial.begin(9600);  // Inicia a comunicação serial
  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(led3, OUTPUT);
}

void loop() {
  if (Serial.available() > 0) {
    estado = Serial.read();  // Lê o estado enviado pelo Python
    if (estado == '1') {
      digitalWrite(led1, HIGH);  // Liga o LED 1
    } else {
      digitalWrite(led1, LOW);  // Desliga o LED 1
    }
    if (estado == '2') {
      digitalWrite(led2, HIGH);  // Liga o LED 2
    } else {
      digitalWrite(led2, LOW);  // Desliga o LED 2
    }
    if (estado == '3') {
      digitalWrite(led3, HIGH);  // Liga o LED 3
    } else {
      digitalWrite(led3, LOW);  // Desliga o LED 3
    }
  }
}
